- if current_website.pages.published.roots.count > 0
  %ul.pages
    - current_website.pages.published.roots.each do |page|
      %li= link_to page.title, page_path(page.permalink)
- if current_website.albums.published.roots.count > 0
  %ul.albums
    - current_website.albums.published.roots.each do |album|
      %li= link_to album.title, album_path(album.permalink)

- content_for :subnavigation do
  %li= link_to t(:'.new'), new_resource_path

- collection.each do |source|
  %div[source]
    = t(:'.source_info', {:username => source.username, :title => source.source_title, :active => t(source.status == 'deleted' ? :'.inactive' : :'.active')})
    = link_to t(:'.reauthenticate'), reauthenticate_admin_source_path(source) unless source.authenticated?
    = link_to t(:'.show'), resource_path(source)
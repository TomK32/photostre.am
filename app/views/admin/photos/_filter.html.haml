
= form_tag(nil, {:method => :get}) do
  %p
    = label_tag :search, t(:'.search')
    = text_field_tag :search, params[:search]
  %p
    = label_tag :tags, t(:'.tags')
    = text_field_tag :tags, params[:tags]
  %p
    = label_tag :per_page, t(:'.per_page')
    = select_tag :per_page, options_for_select(%w(8 16 40 80), params[:per_page].to_s)
  %p.submit
    = submit_tag t(:'.submit'), :name => nil
    .box= link_to t(:'.reset'), admin_photos_path

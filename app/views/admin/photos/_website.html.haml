%div[website]
  .droppable.title= link_to website.title, admin_related_photos_path({:website_id => website.id}), :remote => true
  %ul.data
    %li.domains= website.domains.join(', ')
    %li.photos_count= t(:'admin.photos.index.items', :count => website.related_photos.count)
  %ul.actions
    %li= link_to t(:'.edit_website'), edit_admin_website_path(website)
    %li= link_to t(:'.create_page'), new_admin_website_page_path(website)
    %li= link_to t(:'.pages', :count => website.pages.count), admin_website_pages_path(website)
    %li= link_to t(:'.create_album'), new_admin_website_album_path(website)
  %h4= t(:'.albums', :count => website.albums.count)
  .albums
    = render :partial => 'album', :collection => website.albums

- title t(:".page_title")
- content_for :info do
  = t(:'.info')
- content_for :javascript do
  :plain
    var photo_manager;
    $(document).ready(function(){
      PhotoManager.init();
    });
- content_for :head do
  = javascript_include_tag 'admin/photo_manager'
- content_for :info do
  / # TODO link to 'select all'
  = render :partial => 'filter'

- content_for :subnavigation do
  - if @website
    %li= link_to t(:'.new_album'), new_admin_website_album_path(@website)

.columns
  .column_1_2
    - unless @websites.nil? or @websites.empty?
      %h2= t(:'.websites')
      #websites
        = render :partial => 'website', :collection => @websites
    - unless @albums.nil? or @albums.empty?
      %h2= t(:'.albums')
      #albums
        = render :partial => 'album', :collection => @albums

  .column_2_2
    .info#draggable= render :partial => 'info_draggable'
    .info#remove= render :partial => 'info_remove'
    /.info#delete= render :partial => 'info_delete'

%h2
  = t(:'.photos')
  = t(:'.for_website', :website => @website.site_title) if @website
  = t(:'.for_album', :album => @album.title) if @album
  = t(:".filtered_by_#{params[:filter]}") if params[:filter]
#photos
  %p
    = link_to_function t(:'.select_all'), "$('.selectable').addClass('selected')"
    = link_to_function t(:'.select_none'), "$('.selectable').removeClass('selected')"
  = render :partial => 'photo', :collection => current_objects
= will_paginate current_objects

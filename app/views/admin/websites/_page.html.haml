%li
  = link_to page.title, admin_website_page_url(page.website, page)
  %small
    (
    = link_to t(:'.delete'), admin_website_page_path(page.website, page), :method => :delete, :confirm => t(:'.confirm_deletion')
    ,
    = link_to t(:'.edit'), edit_admin_website_page_path(page.website, page)
    )
  - unless page.children.published.empty?
    %ul
      - page.children.each do |child|
        = render child
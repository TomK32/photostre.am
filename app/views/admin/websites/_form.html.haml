%p
  = form.label :title, t(:'.title')
  = form.text_field :title
%p
  = form.label :tags, t(:'.tags')
  = form.text_field :tag_list
%p
  = form.label :description, raw(t(:'.description'))
  = form.text_field :description
- if resource.new_record?
  %p
    = form.label :subdomain, t(:'.subdomain')
    = text_field_tag :subdomain, params[:subdomain], :class => 'small'
    = '.'
    = select_tag :domain, options_for_select(Website.system.all.collect(&:domains).flatten.collect{|d|[d,d]})
- else
  %p.info= t(:'.change_domain')
%p
  = form.label :root_path, raw(t(:'.root_path'))
  = form.text_field :root_path, :value => resource.root_path || '/albums'
%p
  = form.label :theme_id, t(:'.theme')
  = form.select :theme_id, [current_user.themes, Theme.public].flatten.collect{|t| [t.name, t.id]}
%p
  = form.label :tracking_code, t(:'.tracking_code')
  = form.text_area :tracking_code

- title(current_object.title)

%div[current_object]
  = link_to image_tag(current_object.medium_url), current_object.photo_url if current_object.photo_url

  %ul.meta
    %li= t(:'.taken_at', :date => current_object.taken_at)
    %li
      = t(:'.tagged')
      = current_object.tag_list
    %li= link_to t(:'.from_source', :source => current_object.source.username), current_object.web_url if current_object.source
